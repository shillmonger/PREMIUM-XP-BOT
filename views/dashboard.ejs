<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Dashboard â€¢ Trust Premium XP</title>

  <link rel="icon" type="image/png" href="https://i.postimg.cc/sg5L6Jsq/Trust-Wallet-removebg-preview.png">

  <!-- Tailwind -->
  <script src="https://cdn.tailwindcss.com"></script>

  <script>
    tailwind.config = {
      theme: {
        extend: {
          backgroundImage: {
            'tw-gradient': 'linear-gradient(135deg, #002f7a 0%, #0a4bb3 50%, #2e1a91 100%)',
            'trust-btn': 'linear-gradient(90deg, #1c73e8 0%, #0ab1ff 100%)',
          }
        }
      }
    }
  </script>
</head>

<body class="min-h-screen bg-tw-gradient text-white">

  <!-- Top Bar -->
  <header class="w-full flex justify-between items-center px-6 py-4 bg-white/10 backdrop-blur-md border-b border-white/20">
    <div class="flex items-center gap-3">
      <img src="https://i.postimg.cc/sg5L6Jsq/Trust-Wallet-removebg-preview.png" class="w-8" />
      <span class="font-bold text-lg">Trust Premium XP</span>
    </div>

    <a href="/" class="text-sm opacity-80 hover:opacity-100 transition">
      Logout
    </a>
  </header>

  <!-- Main Content -->
  <main class="max-w-5xl mx-auto px-6 py-12">

    <h1 class="text-4xl font-extrabold mb-2">Dashboard</h1>
    <p class="opacity-80 mb-8">
      Welcome to your Trust Premium XP dashboard
    </p>

    <!-- User Card -->
    <div class="bg-white/10 backdrop-blur-md border border-white/20 rounded-2xl p-6 shadow-xl">
      <h2 class="text-xl font-semibold mb-4">Your Trust Handle</h2>

      <div class="flex items-center justify-between bg-black/30 rounded-xl px-5 py-4">
        <span class="text-lg font-mono text-blue-300">
          <% if (typeof user !== 'undefined' && user) { %>
            @<%= user.handle %>
          <% } else { %>
            @loading...
          <% } %>
        </span>

        <span class="text-xs px-3 py-1 rounded-full bg-green-500/20 text-green-300 border border-green-500/30">
          Verified
        </span>
      </div>

      <p class="text-sm opacity-70 mt-4">
        This handle was registered through Trust Wallet Premium.
      </p>
    </div>

    <!-- Placeholder Stats -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-10">

      <div class="bg-white/10 border border-white/20 rounded-2xl p-6 text-center">
        <p class="text-sm opacity-70">XP Balance</p>
        <p class="text-3xl font-bold mt-2">0 XP</p>
      </div>

      <div class="bg-white/10 border border-white/20 rounded-2xl p-6 text-center">
        <p class="text-sm opacity-70">Status</p>
        <p class="text-3xl font-bold mt-2 text-blue-300">Premium</p>
      </div>

      <div class="bg-white/10 border border-white/20 rounded-2xl p-6 text-center">
        <p class="text-sm opacity-70">Wallet</p>
        <p class="text-3xl font-bold mt-2">Trust</p>
      </div>

    </div>

    <!-- Call to Action -->
    <div class="mt-12 text-center">
      <button class="px-8 py-4 rounded-xl bg-trust-btn font-bold text-lg shadow-xl hover:opacity-95 transition">
        Connect Wallet (Coming Soon)
      </button>
    </div>

  </main>

</body>
</html>
