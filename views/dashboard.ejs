<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Dashboard • Trust Premium XP</title>

  <link rel="icon" type="image/png" href="https://i.postimg.cc/sg5L6Jsq/Trust-Wallet-removebg-preview.png">

  <!-- Tailwind -->
  <script src="https://cdn.tailwindcss.com"></script>
  
  <!-- Sonner Toast -->
  <script src="https://unpkg.com/sonner"></script>
  <script>
    // Expose Sonner to the global window object
    window.toast = window.sonner.toast;
  </script>

  <script>
    tailwind.config = {
      theme: {
        extend: {
          backgroundImage: {
            'tw-gradient': 'linear-gradient(135deg, #002f7a 0%, #0a4bb3 50%, #2e1a91 100%)',
            'trust-btn': 'linear-gradient(90deg, #1c73e8 0%, #0ab1ff 100%)',
          }
        }
      }
    }
  </script>
  <style>
    .xp-popup {
      position: fixed;
      color: #00FF9D;
      font-weight: bold;
      font-size: 1.5rem;
      text-shadow: 0 0 10px rgba(0, 255, 157, 0.7);
      pointer-events: none;
      user-select: none;
      opacity: 0;
      animation: floatUp 1.5s ease-out forwards;
      z-index: 1000;
    }

    @keyframes floatUp {
      0% {
        transform: translate(0, 0) scale(0.8);
        opacity: 1;
      }
      100% {
        transform: translate(0, -100px) scale(1.2);
        opacity: 0;
      }
    }
  </style>
</head>

<body class="min-h-screen bg-gradient-to-br from-[#0a2a78] via-[#103fb5] to-[#2c1b8f] text-white">

  <!-- Top Header -->
  <header class="w-full px-6 py-2 bg-gradient-to-r from-[#1c6ae4] to-[#13b5ff] flex items-center justify-center">
    <div class="flex items-center gap-2 font-bold text-[17px] md:text-base">
      <img src="https://i.postimg.cc/sg5L6Jsq/Trust-Wallet-removebg-preview.png" class="w-8 sm:w-8" />
      Trust Premium XP
    </div>
  </header>



  <!-- Main -->
  <main class="max-w-6xl mx-auto px-4 py-8">

    <!-- XP Section -->
    <%- include('partials/xpOverview') %>






      <!-- Greeting -->
      <div class="mt-8 text-[17px] opacity-80">
        Hi
        <span class="text-lg font-mono text-blue-300">
          <% if (typeof user !=='undefined' && user) { %>
            @<%= user.handle %>
              <% } else { %>
                @loading...
                <% } %>
        </span>
      </div>




      <!-- Action Buttons -->
      <section class="flex w-full gap-4 mt-6">
        <!-- TASKS BUTTON -->
        <button onclick="openTasksModal()"
          class="flex-1 py-4 rounded-xl bg-gradient-to-r from-[#2786ff] to-[#19c6ff] font-bold shadow-lg">
          TASKS
        </button>
        <%- include('partials/tasks-modal') %>
          <script>
            function openTasksModal() {
              document.getElementById('tasksModal').classList.remove('hidden');
              document.body.classList.add('overflow-hidden');
            }

            function closeTasksModal() {
              document.getElementById('tasksModal').classList.add('hidden');
              document.body.classList.remove('overflow-hidden');
            }
          </script>



         <!-- CASHOUT BUTTON -->
<button onclick="openCashoutModal()"
  class="flex-1 py-4 rounded-xl bg-gradient-to-r from-[#1a6fff] to-[#3bd3a8] font-bold shadow-lg">
  CASHOUT
</button>
<%- include('partials/cashout-modal') %>
<script>
  function openCashoutModal() {
    const userBalance = parseFloat('<%= user.usdBalance || 0 %>');
    const minimumAmount = 5000.00;
    
    if (userBalance < minimumAmount) {
      // Show toast message
      const toast = document.createElement('div');
      toast.className = 'fixed top-4 right-4 bg-red-500 text-white px-6 py-3 rounded-lg shadow-lg z-50 flex items-center';
      toast.innerHTML = `
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        You need at least $${minimumAmount.toFixed(2)} to cash out. Current balance: $${userBalance.toFixed(2)}`;
      
      document.body.appendChild(toast);
      
      // Remove toast after 5 seconds
      setTimeout(() => {
        toast.remove();
      }, 5000);
      
      return; // Don't open the modal
    }
    
    // If balance is sufficient, open the cashout modal
    document.getElementById('cashoutModal').classList.remove('hidden');
    document.body.classList.add('overflow-hidden');
  }

  function closeCashoutModal() {
    document.getElementById('cashoutModal').classList.add('hidden');
    document.body.classList.remove('overflow-hidden');
  }
</script>




          <!-- REFERRAL BUTTON -->
          <button onclick="openReferralModal()"
            class="flex-1 py-4 rounded-xl bg-gradient-to-r from-[#ff4fd8] to-[#ff7a4f] font-bold shadow-lg">
            REFERRAL
          </button>
          <%- include('partials/referral-modal') %>
            <script>
              function openReferralModal() {
                document.getElementById('referralModal').classList.remove('hidden');
              }

              function closeReferralModal() {
                document.getElementById('referralModal').classList.add('hidden');
              }
            </script>

      </section>




      <!-- Shield -->
      <section class="flex justify-center mt-16">
        <div class="relative w-full flex justify-center">

          <!-- Trust Wallet Image -->
          <img id="shieldTap" src="https://i.postimg.cc/k4RVNZFM/logo.png" alt="Trust Wallet" class="w-1/2 sm:w-40 md:w-50
                drop-shadow-[0_50px_50px_rgba(0,0,0,0.65)]
