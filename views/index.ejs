        <span class="font-semibold text-base sm:text-lg">Google Play</span>
    </button>

</div>

        
        <div id="input-container" class="mt-8 w-full max-w-md hidden">
            <label for="trust-wallet-handle" class="sr-only">Enter your trust wallet handle</label>
            <input 
                type="text" 
                id="trust-wallet-handle" 
                placeholder="Enter your trust wallet handle"
                class="w-full py-4 px-6 rounded-xl bg-white/10 text-white placeholder-white/70 border-2 border-white/30 focus:border-white focus:outline-none transition"
            />
        </div>

        <button id="main-action-button" class="mt-8 w-full max-w-md py-5 rounded-xl bg-trust-btn shadow-2xl shadow-blue-500/20 flex items-center justify-center gap-3 text-xl font-bold hover:opacity-95 transition hover:scale-[1.01] duration-300">
            Enter Trust Wallet Handle
        </button>

        <p class="mt-4 text-sm opacity-80">
            Make sure to enter a valid Trust Wallet handle
        </p>

        <div class="mt-8 text-xs opacity-60">
            ðŸ”’ Secured by Trust Wallet
        </div>

    </div>

    <script>
        const button = document.getElementById('main-action-button');
        const inputContainer = document.getElementById('input-container');
        
        // This is a flag to track the states
        let isInputVisible = false;

        button.addEventListener('click', () => {
            if (!isInputVisible) {
                // 1. Show the input field
                inputContainer.classList.remove('hidden');
                
                // 2. Change the button text to "Submit"
                button.innerHTML = 'Submit'; 

                // 3. Update the state flag
                isInputVisible = true;
                
                // Optional: Focus the input field after showing it
                document.getElementById('trust-wallet-handle').focus();
            } else {
                // This is the action for the "Submit" click
                const handle = document.getElementById('trust-wallet-handle').value;
                
                if (handle.trim() !== '') {
                    alert('Submitting handle: ' + handle);
                    // **TO DO:** Add your actual form submission logic here (e.g., fetch API call)
                    
                    // After successful submission, you might want to reset the state or redirect
                    // For now, it just shows an alert.
                } else {
                    alert('Please enter your Trust Wallet handle before submitting.');
                }
            }
        });
    </script>
